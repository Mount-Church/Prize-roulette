# Save exact version of packages in package-lock.json
save-exact=true

# Use package-lock.json (enabled by default in npm 5+)
package-lock=true

# Use the package-lock.json from the registry when available
prefer-offline=true

# Disable package-lock.json for workspaces
# This is useful for monorepos but can be enabled if needed
# workspaces-update=false

# Set the engine-strict flag to ensure the correct Node.js version is used
engine-strict=true

# Set the registry (uncomment and update if using a private registry)
# registry=https://registry.npmjs.org/

# Set the cache directory (useful for CI/CD environments)
# cache=${HOME}/.npm

# Set the tmp directory (useful for CI/CD environments)
# tmp=${HOME}/.npm/tmp

# Disable progress bar for CI environments
# progress=false

# Set the loglevel (error, warn, info, verbose, silly)
# loglevel=warn

# Set the fetch retry settings
# fetch-retries=2
# fetch-retry-mintimeout=20000
# fetch-retry-maxtimeout=120000

# Set the network concurrency
# maxsockets=50

# Set the user agent
# user-agent=npm/{npm-version} node/{node-version} {platform} {arch} {ci}

# Set the scripts-prepend-node-path to ensure the correct Node.js version is used
# scripts-prepend-node-path=true

# Set the fund flag to false to disable funding messages
fund=false

# Set the audit level to none to disable security audits
# audit-level=none

# Set the audit to false to disable security audits
# audit=false

# Set the package-lock-only flag to only update the package-lock.json
# package-lock-only=false

# Set the save-prefix to use exact versions
# save-prefix=

# Set the tag-version-prefix to an empty string to remove the 'v' prefix from version tags
# tag-version-prefix=

# Set the git-tag-version to false to disable git tag creation
# git-tag-version=true

# Set the commit-hooks to false to disable git commit hooks
# commit-hooks=true

# Set the ignore-scripts flag to true to disable running scripts during installation
# ignore-scripts=false

# Set the script-shell to specify the shell to use for script execution
# script-shell=/bin/sh

# Set the node-options to pass to the Node.js process
# node-options=--max-old-space-size=4096

# Set the strict-ssl flag to false to allow connections to SSL sites without valid certificates
# strict-ssl=true

# Set the ca and cafile options to specify a custom CA certificate
# ca=[]
# cafile=/path/to/certificate.pem

# Set the proxy and https-proxy options if behind a corporate proxy
# proxy=http://proxy.company.com:8080
# https-proxy=http://proxy.company.com:8080
# noproxy=localhost,127.0.0.1,::1,company.com

# Set the registry scopes for different packages
# @myorg:registry=https://registry.myorg.com/
# @myotherorg:registry=https://registry.myotherorg.com/

# Set the authentication token for private registries
# //registry.npmjs.org/:_authToken=${NPM_TOKEN}

# Set the always-auth flag to always require authentication
# always-auth=true

# Set the auth-type to 'legacy' for older npm registries
# _auth-type=legacy

# Set the _auth token for basic authentication
# _auth=base64-encoded-username:password
